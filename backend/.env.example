# AI Trading Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development, testing, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# API server host (0.0.0.0 for external access)
API_HOST=0.0.0.0

# API server port
API_PORT=3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
# Use localhost for testing / development (when running outside Podman)
# Use postgres for production (when running inside Podman network)
DATABASE_URL=postgresql://trading_user:trading_password@postgres:5432/trading_db

# Database echo SQL queries (true/false)
DATABASE_ECHO=false

# Database connection pool size
DATABASE_POOL_SIZE=20

# Database max overflow connections
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log format: json or text
LOG_FORMAT=json

# Log directory
LOG_DIR=logs

# ============================================================================
# ASTERDEX CONFIGURATION (REQUIRED)
# ============================================================================

# AsterDEX API Key
ASTERDEX_API_KEY=your_asterdex_api_key_here

# AsterDEX API Secret
ASTERDEX_API_SECRET=your_asterdex_api_secret_here

# AsterDEX Base URL
ASTERDEX_BASE_URL=https://fapi.asterdex.com

# AsterDEX Network: mainnet or testnet
ASTERDEX_NETWORK=mainnet

# ============================================================================
# OPENROUTER CONFIGURATION (REQUIRED)
# ============================================================================

# OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenRouter Referer
OPENROUTER_REFERER=trading-agent

# OpenRouter App Title
OPENROUTER_APP_TITLE=trading-agent

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# LLM Model to use
# Options: x-ai/grok-4, deepseek/deepseek-chat, anthropic/claude-3-sonnet, openai/gpt-4
LLM_MODEL=deepseek/deepseek-chat-v3-0324:free

# Assets to trade (comma-separated)
ASSETS=BTC,ETH,SOL,ASTER

# Trading interval: 5m, 1h, 4h, 1d
INTERVAL=5m

# Long interval: 5m, 1h, 4h, 1d
LONG_INTERVAL=4h

# Trading leverage (2x-5x recommended)
LEVERAGE=2.0

# Maximum position size in USD
MAX_POSITION_SIZE_USD=10000.0

# ============================================================================
# MULTI-ACCOUNT CONFIGURATION (OPTIONAL)
# ============================================================================

# Enable multi-account mode (true/false)
MULTI_ACCOUNT_MODE=false

# Account IDs (comma-separated, only if MULTI_ACCOUNT_MODE=true)
# ACCOUNT_IDS=account1,account2,account3

# Multi-account API keys (only if MULTI_ACCOUNT_MODE=true)
# ASTERDEX_API_KEY_account1=key1
# ASTERDEX_API_SECRET_account1=secret1
# OPENROUTER_API_KEY_account1=router_key1
# LLM_MODEL_account1=x-ai/grok-4

# ASTERDEX_API_KEY_account2=key2
# ASTERDEX_API_SECRET_account2=secret2
# OPENROUTER_API_KEY_account2=router_key2
# LLM_MODEL_account2=deepseek/deepseek-chat

# ============================================================================
# JWT & AUTHENTICATION SETTINGS
# ============================================================================

# Secret key for signing JWT tokens.
# IMPORTANT: Change this to a strong, unique, and randomly generated string for production.
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your_super_secret_random_string_here

# Algorithm for signing JWT tokens
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=240


# ============================================================================
# NOTES
# ============================================================================
# 1. Required fields: ASTERDEX_API_KEY, ASTERDEX_API_SECRET, OPENROUTER_API_KEY
# 2. Never commit this file with real values to version control
# 3. Use .env.testing for local testing overrides
# 4. For production, use environment variables or secrets manager
# 5. Keep API keys secure and rotate them regularly
